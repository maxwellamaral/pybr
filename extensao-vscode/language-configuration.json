{
  "comments": {
    "lineComment": "#",
    "blockComment": ["'''", "'''"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'''", "close": "'''", "notIn": ["string", "comment"] },
    { "open": "\"\"\"", "close": "\"\"\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["'''", "'''"],
    ["\"\"\"", "\"\"\""]
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(definir|classe|se|senaose|senao|para|enquanto|tente|exceto|finalmente|com)\\b.*:\\s*(#.*)?$",
    "decreaseIndentPattern": "^\\s*(senao|senaose|exceto|finalmente)\\b.*:\\s*(#.*)?$"
  }
}
